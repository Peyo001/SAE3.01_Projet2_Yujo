{% extends "base_template.html.twig" %}

{% block title %}Créer un objet{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <h1 class="h3 mb-4">Nouvel objet</h1>
        {% if erreurs is defined and erreurs %}
            <div class="alert alert-danger">
                <ul class="mb-0">
                    {% for e in erreurs %}
                        <li>{{ e }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <form method="post" action="index.php?controleur=objet&methode=creer&idRoom={{ idRoom }}">
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" class="form-control" id="description" name="description" required minlength="2" maxlength="200" placeholder="Ex: Chaise en bois" value="{{ donnees.description|default('') }}">
            </div>
            <div class="mb-3">
                <label for="modele3dPath" class="form-label">Chemin du modèle 3D</label>
                <input type="text" class="form-control" id="modele3dPath" name="modele3dPath" required maxlength="300" placeholder="Ex: /models/chaise.obj" value="{{ donnees.modele3dPath|default('') }}">
            </div>
            <div class="mb-3">
                <label for="prix" class="form-label">Prix</label>
                <input type="number" class="form-control" id="prix" name="prix" required min="0" step="1" placeholder="Ex: 100" value="{{ donnees.prix|default('') }}">
            </div>
            <button type="submit" class="btn btn-success">Créer</button>
            <a class="btn btn-outline-secondary" href="index.php?controleur=room&methode=afficher&idRoom={{ idRoom }}">Annuler</a>
        </form>
    </div>
</div>
{% endblock %}
