{% extends "base_template.html.twig" %}

{% block title %}Liste des rooms{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12 d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">Rooms</h1>
        <a class="btn btn-success" href="index.php?controleur=room&methode=creer">+ Nouvelle room</a>
    </div>

    {% if rooms is empty %}
        <div class="col-12">
            <div class="alert alert-info">Aucune room pour le moment.</div>
        </div>
    {% else %}
        {% for room in rooms %}
            <div class="col-12 col-md-6 col-lg-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ room.nom }}</h5>
                        <p class="text-muted mb-2">Visibilité : {{ room.visibilite }}</p>
                        <p class="text-muted small mb-3">Créée le {{ room.dateCreation }}</p>
                        <div class="d-flex gap-2">
                            <a class="btn btn-primary btn-sm" href="index.php?controleur=room&methode=afficher&idRoom={{ room.idRoom }}">Ouvrir</a>
                            <a class="btn btn-outline-secondary btn-sm" href="index.php?controleur=room&methode=modifier&idRoom={{ room.idRoom }}">Modifier</a>
                            <a class="btn btn-outline-danger btn-sm" href="index.php?controleur=room&methode=supprimer&idRoom={{ room.idRoom }}" onclick="return confirm('Supprimer cette room ?');">Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
