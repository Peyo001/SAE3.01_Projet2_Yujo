{% extends "base_template.html.twig" %}

{% block title %}Liste des questions{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12 d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">Questions</h1>
        <a class="btn btn-success" href="index.php?controleur=question&methode=afficherFormulaireInsertion">+ Nouvelle question</a>
    </div>

    {% if questions is empty %}
        <div class="col-12">
            <div class="alert alert-info">Aucune question.</div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="list-group shadow-sm">
                {% for q in questions %}
                    <a class="list-group-item list-group-item-action" href="index.php?controleur=question&methode=afficher&idQuestion={{ q.idQuestion }}">
                        {{ q.libelle }}
                    </a>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
