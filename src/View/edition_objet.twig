{% extends "base_template.html.twig" %}

{% block title %}Modifier l'objet{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <h1 class="h3 mb-4">Modifier l'objet</h1>
        {% if erreurs is defined and erreurs %}
            <div class="alert alert-danger">
                <ul class="mb-0">
                    {% for e in erreurs %}
                        <li>{{ e }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <form method="post" action="index.php?controleur=objet&methode=modifier&idObjet={{ objet.idObjet }}">
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" class="form-control" id="description" name="description" required minlength="2" maxlength="200" value="{{ donnees.description|default(objet.description) }}">
            </div>
            <div class="mb-3">
                <label for="modele3dPath" class="form-label">Chemin du mod√®le 3D</label>
                <input type="text" class="form-control" id="modele3dPath" name="modele3dPath" required maxlength="300" value="{{ donnees.modele3dPath|default(objet.modele3dPath) }}">
            </div>
            <div class="mb-3">
                <label for="prix" class="form-label">Prix</label>
                <input type="number" class="form-control" id="prix" name="prix" required min="0" step="1" value="{{ donnees.prix|default(objet.prix) }}">
            </div>
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a class="btn btn-outline-secondary" href="index.php?controleur=objet&methode=afficher&idObjet={{ objet.idObjet }}">Annuler</a>
        </form>
    </div>
</div>
{% endblock %}
