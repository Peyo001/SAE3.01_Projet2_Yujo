{# templates/parametre.twig #}

{# On étend souvent un layout de base qui contient le <head> et la navbar #}
{% extends "base_template.html.twig" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<div class="container py-5">
    
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-5 fw-bold text-primary">Paramètres</h1>
            <p class="text-muted">Gérez vos préférences et votre compte, @{{ user.Pseudo }}</p>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-12">
            <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-user-circle me-2"></i>Mon Compte</h5>
        </div>
        
        <div class="col-md-4">
            <a href="index.php?controleur=parametre&methode=modifierProfil" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-id-card fa-3x text-primary mb-3"></i>
                        <h5 class="card-title text-dark">Modifier profil</h5>
                        <p class="card-text text-muted small">Changez votre avatar, bio et infos personnelles.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="index.php?controleur=parametre&methode=modifierConfidentialite" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-user-shield fa-3x text-success mb-3"></i>
                        <h5 class="card-title text-dark">Confidentialité</h5>
                        <p class="card-text text-muted small">Gérez qui peut voir vos publications et vos données.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="index.php?controleur=utilisateur&methode=afficherChangementMotDePasse" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-key fa-3x text-warning mb-3"></i>
                        <h5 class="card-title text-dark">Mot de passe</h5>
                        <p class="card-text text-muted small">Changez votre mot de passe en toute sécurité.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="index.php?controleur=parametre&methode=afficherAbonnement" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect {{ user.getEstPremium() ? 'border-warning' : '' }}">
                    <div class="card-body text-center">
                        <i class="fas fa-crown fa-3x text-warning mb-3"></i>
                        <h5 class="card-title text-dark">Abonnement</h5>
                        <p class="card-text text-muted small">
                            {% if user.getEstPremium() %}
                                Gérer votre abonnement Premium.
                            {% else %}
                                Passez au niveau supérieur !
                            {% endif %}
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-12">
            <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-layer-group me-2"></i>Mes Contenus</h5>
        </div>

        <div class="col-md-6">
            <a href="index.php?controleur=post&methode=lister&id_auteur={{ user.getIdUtilisateur() }}" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-newspaper fa-2x text-info"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-dark fw-bold">Mes Posts</h6>
                            <small class="text-muted">Gérer l'historique de vos publications</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6">
            <a href="/user/rooms" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-comments fa-2x text-info"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-dark fw-bold">Mes Rooms</h6>
                            <small class="text-muted">Voir les salons que vous avez rejoints</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4" id="newsletter">
        <div class="col-12">
            <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-envelope me-2"></i>Newsletter</h5>
        </div>
        <div class="col-12">
            {% if estInscritNewsletter %}
                <div class="card shadow-sm border-success">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-success fa-2x me-3"></i>
                            <div>
                                <h6 class="card-title text-success mb-1">
                                    Vous êtes bien inscrit à la newsletter !
                                </h6>
                                <p class="text-muted small mb-0">Vous recevez nos actualités à l'adresse : <strong>{{ user.email }}</strong></p>
                            </div>
                        </div>
                        {% if app.session.get('newsletter_message') %}
                            <div class="alert alert-{{ app.session.get('newsletter_type') }} alert-dismissible fade show mb-3" role="alert">
                                {{ app.session.get('newsletter_message') }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                            {% do app.session.remove('newsletter_message') %}
                            {% do app.session.remove('newsletter_type') %}
                        {% endif %}
                        <form method="post" action="index.php?controleur=newsletter&methode=desinscrire" onsubmit="return confirm('Voulez-vous vraiment vous désinscrire de la newsletter ?');">
                            <input type="hidden" name="email" value="{{ user.email }}">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="fas fa-times me-2"></i>Se désinscrire
                            </button>
                        </form>
                    </div>
                </div>
            {% else %}
                <div class="card shadow-sm border-0">
                    <div class="card-body p-5">
                        <h3 class="fw-bold mb-2 text-primary">Restez connecté(e) !</h3>
                        <p class="text-muted mb-4">Recevez nos actualités et contenus exclusifs. Simple et convivial.</p>
                        
                        {% if app.session.get('newsletter_message') %}
                            <div class="alert alert-{{ app.session.get('newsletter_type') }} alert-dismissible fade show mb-3" role="alert">
                                {{ app.session.get('newsletter_message') }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                            {% do app.session.remove('newsletter_message') %}
                            {% do app.session.remove('newsletter_type') %}
                        {% endif %}
                        
                        <form method="post" action="index.php?controleur=newsletter&methode=inscrire">
                            <div class="mb-3">
                                <label class="form-label fw-semibold small">Votre adresse email *</label>
                                <input type="email" name="email" class="form-control form-control-lg" placeholder="exemple@email.com" value="{{ user.email }}" required>
                            </div>
                            
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="acceptNewsletter" required>
                                <label class="form-check-label small" for="acceptNewsletter">
                                    J'accepte explicitement de recevoir la newsletter.
                                </label>
                            </div>
                            
                            <p class="small text-muted mb-4">
                                <a href="index.php?controleur=parametre&methode=afficherPolitiqueConfidentialite" class="text-decoration-none">Consulter notre politique de confidentialité</a>
                            </p>
                            
                            <button type="submit" class="btn btn-lg w-100 text-white fw-bold" style="background-color: #e91e63; border: none; border-radius: 25px;">
                                M'INSCRIRE
                            </button>
                            
                            <p class="small text-muted mt-3 mb-0">
                                * Nous utilisons votre adresse email uniquement pour cette newsletter. Lien de désinscription inclus.
                            </p>
                        </form>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12">
            <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-cogs me-2"></i>Préférences</h5>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="/settings/theme" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-palette fa-2x text-purple mb-2" style="color: #6f42c1;"></i>
                        <h6 class="card-title text-dark">Apparence</h6>
                        <p class="card-text small text-muted">Mode sombre / clair</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="/help" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-question-circle fa-2x text-secondary mb-2"></i>
                        <h6 class="card-title text-dark">Aide & Support</h6>
                        <p class="card-text small text-muted">FAQ et contact</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="index.php?controleur=parametre&methode=afficherMentionsLegales" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-file-contract fa-2x text-info mb-2"></i>
                        <h6 class="card-title text-dark">Mentions Légales</h6>
                        <p class="card-text small text-muted">Conditions et responsabilités</p>
                    </div>
                </div>
            </a>
        </div>

        {% if user.getTypeCompte() == 'Administrateur' %}
        <div class="col-md-6 col-lg-4">
            <a href="index.php?controleur=admin&methode=dashboard" class="text-decoration-none">
                <div class="card h-100 shadow-sm border-danger hover-effect">
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                        <i class="fas fa-shield-alt fa-2x text-danger mb-2"></i>
                        <h6 class="card-title text-dark">Panel Administrateur</h6>
                        <p class="card-text small text-muted">Accéder à l'administration</p>
                    </div>
                </div>
            </a>
        </div>
        {% endif %}
        

        <div class="col-md-6 col-lg-4">
            <a href="index.php?controleur=utilisateur&methode=deconnexion" class="text-decoration-none" onclick="return confirm('Voulez-vous vraiment vous déconnecter ?');">
                <div class="card h-100 shadow-sm border-danger bg-light-danger hover-danger">
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                        <h6 class="card-title text-danger fw-bold"><i class="fas fa-sign-out-alt me-2"></i>Déconnexion</h6>
                        
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    /* Petit CSS inline pour l'exemple, à mettre idéalement dans un style.css */
    .hover-effect {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: 1px solid #eee;
    }
    .hover-effect:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        border-color: #ddd;
    }
    .hover-danger:hover {
        background-color: #dc3545;
    }
    .hover-danger:hover h6 {
        color: white !important;
    }
</style>
{% endblock %}