{# templates/parametre.twig #}

{# On étend souvent un layout de base qui contient le <head> et la navbar #}
{% extends "base_template.html.twig" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<div class="container py-5">
    
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-5 fw-bold text-primary">Paramètres</h1>
            <p class="text-muted">Gérez vos préférences et votre compte, @{{ user.username }}</p>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-12">
            <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-user-circle me-2"></i>Mon Compte</h5>
        </div>
        
        <div class="col-md-4">
            <a href="index.php?controleur=parametre&methode=modifierProfil" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-id-card fa-3x text-primary mb-3"></i>
                        <h5 class="card-title text-dark">Modifier profil</h5>
                        <p class="card-text text-muted small">Changez votre avatar, bio et infos personnelles.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="index.php?controleur=parametre&methode=modifierConfidentialite" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-user-shield fa-3x text-success mb-3"></i>
                        <h5 class="card-title text-dark">Confidentialité</h5>
                        <p class="card-text text-muted small">Gérez qui peut voir vos publications et vos données.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a href="index.php?controleur=parametre&methode=abonnement" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect {{ user.is_premium ? 'border-warning' : '' }}">
                    <div class="card-body text-center">
                        <i class="fas fa-crown fa-3x text-warning mb-3"></i>
                        <h5 class="card-title text-dark">Abonnement</h5>
                        <p class="card-text text-muted small">
                            {% if user.is_premium %}
                                Gérer votre abonnement Premium.
                            {% else %}
                                Passez au niveau supérieur !
                            {% endif %}
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-12">
            <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-layer-group me-2"></i>Mes Contenus</h5>
        </div>

        <div class="col-md-6">
            <a href="index.php?controleur=post&methode=afficher" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-newspaper fa-2x text-info"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-dark fw-bold">Mes Posts</h6>
                            <small class="text-muted">Gérer l'historique de vos publications</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6">
            <a href="/user/rooms" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-comments fa-2x text-info"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 text-dark fw-bold">Mes Rooms</h6>
                            <small class="text-muted">Voir les salons que vous avez rejoints</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12">
            <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-cogs me-2"></i>Préférences</h5>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="/settings/theme" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-palette fa-2x text-purple mb-2" style="color: #6f42c1;"></i>
                        <h6 class="card-title text-dark">Apparence</h6>
                        <p class="card-text small text-muted">Mode sombre / clair</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="/help" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-question-circle fa-2x text-secondary mb-2"></i>
                        <h6 class="card-title text-dark">Aide & Support</h6>
                        <p class="card-text small text-muted">FAQ et contact</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-12 col-lg-4">
            <a href="/logout" class="text-decoration-none" onclick="return confirm('Voulez-vous vraiment vous déconnecter ?');">
                <div class="card h-100 shadow-sm border-danger bg-light-danger hover-danger">
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                        <h6 class="card-title text-danger fw-bold"><i class="fas fa-sign-out-alt me-2"></i>Déconnexion</h6>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    /* Petit CSS inline pour l'exemple, à mettre idéalement dans un style.css */
    .hover-effect {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: 1px solid #eee;
    }
    .hover-effect:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        border-color: #ddd;
    }
    .hover-danger:hover {
        background-color: #dc3545;
    }
    .hover-danger:hover h6 {
        color: white !important;
    }
</style>
{% endblock %}