{% extends "base_template.html.twig" %}

{% block title %}Fil d'actualité{% endblock %}

{% block content %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-1">
                    {% if estProprietaire %}
                        Votre fil d'actualité
                    {% elseif auteur is defined and auteur %}
                        Fil d'actualité de {{ auteur.pseudo }}
                    {% else %}
                        Fil d'actualité
                    {% endif %}
                </h1>
                <p class="text-muted mb-0">
                    {% if estProprietaire %}
                        Vos derniers posts
                    {% elseif auteur is defined and auteur %}
                        Derniers posts de {{ auteur.pseudo }}
                    {% else %}
                        Derniers posts
                    {% endif %}
                </p>
            </div>
            {% if estProprietaire %}
            <a class="btn btn-cta" href="index.php?controleur=post&methode=afficherFormulaireInsertion">Publier</a>
            {% endif %}
        </div>

        <div class="row g-3">
            {% for post in posts %}
                <div class="col-12" id="post-{{ post.idPost }}">
                    <div class="card shadow-sm border-0 h-100 hover-effect">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="d-flex align-items-center gap-2">
                                    {% set auteur = utilisateurs[post.idAuteur]|default(null) %}
                                    {% set avatarAuteur = (auteur and auteur.personnalisation) ? '/' ~ auteur.personnalisation : null %}
                                    <div class="rounded-circle bg-secondary overflow-hidden" style="width:36px;height:36px;">
                                        {% if avatarAuteur %}
                                            <img src="{{ avatarAuteur }}" alt="Avatar de {{ auteur.pseudo|default('auteur') }}" style="width:100%;height:100%;object-fit:cover;">
                                        {% endif %}
                                    </div>
                                    <div>
                                        <strong>{{ auteur.pseudo|default('Auteur inconnu') }}</strong>
                                        <div class="text-muted small">{{ post.datePublication|date('d/m/Y H:i') }}</div>
                                    </div>
                                </div>
                                <span class="badge bg-primary">{{ post.typePost|capitalize }}</span>
                            </div>
                            {% if post.typePost == 'quiz' %}
                                <div class="p-3 border rounded-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <div class="fw-bold">Quiz</div>
                                            {% if quizParPost[post.idPost] is defined %}
                                                <p class="mb-0 text-muted">{{ quizParPost[post.idPost].titre }}</p>
                                            {% endif %}
                                        </div>
                                        <a class="btn btn-sm btn-cta" href="index.php?controleur=post&methode=afficherQuiz&id={{ post.idPost }}">Jouer</a>
                                    </div>
                                </div>
                            {% elseif post.typePost == 'post' and 'uploads/posts/' in post.contenu %}
                                <img src="{{ post.contenu }}" alt="Image du post" class="img-fluid rounded" style="max-height: 380px; object-fit: cover;">
                            {% else %}
                                <p class="mb-0 text-muted">{{ post.contenu }}</p>
                            {% endif %}

                            <div class="mt-3 d-flex align-items-center gap-2">
                                {% set rep = reponsesParPost[post.idPost]|default([]) %}
                                <details>
                                    <summary class="btn btn-sm btn-outline-primary mb-0">Commentaires ({{ rep|length }})</summary>
                                    <div class="mt-2">
                                        {% if rep|length > 0 %}
                                            <ul class="list-group mb-3">
                                                {% for r in rep %}
                                                    {% set comAuteur = utilisateurs[r.idAuteur]|default(null) %}
                                                    <li class="list-group-item">
                                                        <div class="small text-muted">
                                                            Le {{ r.dateReponse }} —
                                                            {% if comAuteur %}
                                                                {{ comAuteur.pseudo }}
                                                            {% else %}
                                                                Utilisateur #{{ r.idAuteur }}
                                                            {% endif %}
                                                        </div>
                                                        <div>{{ r.contenu }}</div>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% else %}
                                            <p class="text-muted">Aucun commentaire pour l'instant.</p>
                                        {% endif %}
                                        <form action="index.php?controleur=post&methode=repondre&id={{ post.idPost }}" method="post">
                                            <div class="mb-2">
                                                <textarea name="contenu" class="form-control" rows="2" placeholder="Écrire un commentaire..."></textarea>
                                            </div>
                                            <input type="hidden" name="redirect" value="index.php?controleur=post&methode=lister#post-{{ post.idPost }}">
                                            <button type="submit" class="btn btn-primary btn-sm">Publier</button>
                                        </form>
                                    </div>
                                </details>
                                <a class="btn btn-sm btn-outline-secondary" href="index.php?controleur=post&methode=afficher&id={{ post.idPost }}">Voir</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">Aucun post à afficher pour le moment.</div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}