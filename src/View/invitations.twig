{% extends "base_template.html.twig" %}

{% block title %}Mes invitations{% endblock %}

{% block content %}
    <div class="container py-4">
        <div class="mb-4">
            <a href="index.php?controleur=groupe&methode=lister" class="text-decoration-none">&larr; Retour aux groupes</a>
        </div>

        <h2 class="text-primary mb-4">Mes invitations de groupes</h2>

        {% if invitations is defined and invitations|length > 0 %}
            <div class="row g-3">
                {% for invitation in invitations %}
                    {% set groupe = groupes[invitation.idGroupe] %}
                    {% set utilisateur = utilisateurs[invitation.idHote] %}
                    
                    <div class="col-12">
                        <div class="card shadow-sm border-left border-primary">
                            <div class="card-body p-4">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <div class="d-flex align-items-center gap-3 mb-2">
                                            <i class="bi bi-people-fill text-primary" style="font-size: 1.5rem;"></i>
                                            <div>
                                                <h5 class="mb-0">
                                                    <a href="index.php?controleur=groupe&methode=afficher&id={{ groupe.idGroupe }}" class="text-decoration-none">
                                                        {{ groupe.nomGroupe }}
                                                    </a>
                                                </h5>
                                                <small class="text-muted">
                                                    Invité par 
                                                    <strong>
                                                        {% if utilisateur %}
                                                            {{ utilisateur.prenom }} {{ utilisateur.nom }}
                                                        {% else %}
                                                            Utilisateur supprimé
                                                        {% endif %}
                                                    </strong>
                                                </small>
                                            </div>
                                        </div>
                                        <p class="text-muted mb-0 ms-5">{{ groupe.descriptionGroupe|default('Aucune description')|slice(0, 100) }}{% if groupe.descriptionGroupe and groupe.descriptionGroupe|length > 100 %}…{% endif %}</p>
                                        <small class="text-muted ms-5">Invité le {{ invitation.dateInvitation|date('d/m/Y à H:i') }}</small>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="d-flex gap-2 justify-content-end">
                                            <a href="index.php?controleur=groupe&methode=accepterInvitation&idHote={{ invitation.idHote }}&idGroupe={{ invitation.idGroupe }}" class="btn btn-success btn-sm">
                                                <i class="bi bi-check-circle"></i> Accepter
                                            </a>
                                            <a href="index.php?controleur=groupe&methode=refuserInvitation&idHote={{ invitation.idHote }}&idGroupe={{ invitation.idGroupe }}" class="btn btn-danger btn-sm">
                                                <i class="bi bi-x-circle"></i> Refuser
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3 mb-0">Vous n'avez pas d'invitations de groupes pour le moment.</p>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
