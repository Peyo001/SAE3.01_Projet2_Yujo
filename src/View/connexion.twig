{% extends "base_template.html.twig" %}

{% block title %}Connexion - Yujo{% endblock %}

{% block content %}
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card p-4">
            <h2 class="text-center mb-4">Connexion</h2>
            
            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}

            <form action="index.php?controleur=utilisateur&methode=traiterConnexion" method="post">
                <div class="mb-3">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" value="{{ last_email }}" required>
                </div>
                <div class="mb-3">
                    <label>Mot de passe</label>
                    <input type="password" name="password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Se connecter</button>
            </form>
            
            <p class="mt-3 text-center">
                Pas encore de compte ? <a href="index.php?controleur=utilisateur&methode=afficherFormulaireInscription">S'inscrire</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}