{% extends "base_template.html.twig" %}

{% block title %}Profil de {{ utilisateur.pseudo }}{% endblock %}

{% block content %}
<div class="container py-5">
    
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-5 fw-bold text-primary">Mon Profil</h1>
            <p class="text-muted">Bienvenue sur votre espace personnel, @{{ utilisateur.pseudo }}</p>
            <div class="d-flex justify-content-center gap-4 mt-3">
                <div class="text-center">
                    <div class="fw-bold h5 mb-0">{{ amis|length }}</div>
                    <small class="text-muted">Amis</small>
                </div>
                <div class="text-center">
                    <div class="fw-bold h5 mb-0">{{ posts|length }}</div>
                    <small class="text-muted">Posts</small>
                </div>
                <div class="text-center">
                    <div class="fw-bold h5 mb-0">{{ rooms|length }}</div>
                    <small class="text-muted">Rooms</small>
                </div>
                <div class="text-center">
                    <div class="fw-bold h5 mb-0">{{ objetsPossedes|length }}</div>
                    <small class="text-muted">Objets</small>
                </div>
            </div>
        </div>
    </div>

    {% if flash_success %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ flash_success }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}
    {% if flash_error %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ flash_error }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}

    <div class="row g-4 mb-4">
        <div class="col-12">
            <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-layer-group me-2"></i>Mes Contenus</h5>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="index.php?controleur=post&methode=lister&id_auteur={{ utilisateur.idUtilisateur }}" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-newspaper fa-3x text-info mb-3"></i>
                        <h5 class="card-title text-dark">Mes Posts</h5>
                        <p class="card-text text-muted small">Voir et gérer tous mes posts</p>
                        <div class="mt-2">
                            <span class="badge bg-info">{{ posts|length }} post{{ posts|length > 1 ? 's' : '' }}</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="index.php?controleur=utilisateur&methode=afficherAmis" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-user-friends fa-3x text-success mb-3"></i>
                        <h5 class="card-title text-dark">Mes Amis</h5>
                        <p class="card-text text-muted small">Gérer ma liste d'amis</p>
                        <div class="mt-2">
                            <span class="badge bg-success">{{ amis|length }} ami{{ amis|length > 1 ? 's' : '' }}</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="index.php?controleur=room&methode=lister&idCreateur={{ utilisateur.idUtilisateur }}" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-comments fa-3x text-warning mb-3"></i>
                        <h5 class="card-title text-dark">Mes Rooms</h5>
                        <p class="card-text text-muted small">Accéder à mes salons de discussion</p>
                        <div class="mt-2">
                            <span class="badge bg-warning">{{ rooms|length }} room{{ rooms|length > 1 ? 's' : '' }}</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="index.php?controleur=objet&methode=listerMesObjets" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <i class="fas fa-box-open fa-3x text-danger mb-3"></i>
                        <h5 class="card-title text-dark">Mes Objets</h5>
                        <p class="card-text text-muted small">Voir mes objets possédés</p>
                        <div class="mt-2">
                            <span class="badge bg-danger">{{ objetsPossedes|length }} objet{{ objetsPossedes|length > 1 ? 's' : '' }}</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
{% endblock %}
{% block scripts %}
<style>
    /* Harmonisation avec la page Paramètres */
    .hover-effect {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: 1px solid #eee;
    }
    .hover-effect:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        border-color: #ddd;
    }
</style>
{% endblock %}