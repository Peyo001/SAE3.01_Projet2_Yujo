                                                    <form action="index.php?controleur=post&methode=repondre&id={{ post.idPost }}" method="post">
                                                        <div class="mb-2">
                                                            <textarea name="contenu" class="form-control" rows="2" placeholder="Ã‰crire un commentaire..."></textarea>
                                                        </div>
