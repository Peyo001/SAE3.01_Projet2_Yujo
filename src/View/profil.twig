                                            <a class="text-danger text-decoration-none" href="index.php?controleur=post&methode=supprimer&id={{ post.idPost }}&redirect=profil">Supprimer</a>
                                        </div>
                                        <div class="mt-2">
                                            {% set rep = reponsesParPost[post.idPost]|default([]) %}
                                            <details>
                                                <summary class="btn btn-sm btn-outline-primary">Commentaires ({{ rep|length }})</summary>
                                                <div class="mt-2">
