                        function togglePostFields(){
                            const type = document.getElementById('type_post').value;
                            document.getElementById('contenuText').style.display = (type === 'post') ? 'block' : 'none';
                            document.getElementById('contenuImage').style.display = (type === 'post') ? 'block' : 'none';
                            document.getElementById('quizFields').style.display = (type === 'quiz') ? 'block' : 'none';
                        }
                        document.addEventListener('DOMContentLoaded', togglePostFields);
                        function quickAddImage(){
                            const typeSel = document.getElementById('type_post');
                            typeSel.value = 'post';
                            togglePostFields();
                            const fileInput = document.getElementById('image');
                            if (fileInput) fileInput.click();
                        }
                        </script>
                    </div>
                </div>

                <div class="card shadow-sm border-0">
