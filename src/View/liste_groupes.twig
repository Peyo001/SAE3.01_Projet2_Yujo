{% extends "base_template.html.twig" %}

{% block title %}Les Groupes{% endblock %}
                                                                                                                                                
{% block content %}
    <div class="container py-4">
        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center mb-4 gap-3">
            <h2 class="text-primary mb-0">Liste des Groupes</h2>
            <div class="d-flex gap-2 align-items-center w-100 w-lg-auto">
                <form class="d-flex w-100" method="get" action="index.php">
                    <input type="hidden" name="controleur" value="groupe">
                    <input type="hidden" name="methode" value="lister">
                    <input type="text" name="search" class="form-control" placeholder="Rechercher un groupe..." value="{{ search|default('') }}">
                    <button type="submit" class="btn btn-gradient">Rechercher</button>
                </form>
                <a href="index.php?controleur=groupe&methode=afficherFormulaireCreation" class="btn btn-violet">
                    + Créer un groupe
                </a>
            </div>
        </div>

        <div class="row g-3">
            {% if search is defined and search %}
                <div class="col-12"><p class="text-muted">Résultats pour "{{ search }}"</p></div>
            {% endif %}
            {% for groupe in groupes %}
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card h-100 shadow-sm hover-effect border-0">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-people-fill text-primary" style="font-size: 1.25rem;"></i>
                                <h5 class="ms-2 mb-0">{{ groupe.nomGroupe }}</h5>
                            </div>
                            <p class="text-muted small mb-2">Créé le {{ groupe.dateCreation|date("d/m/Y") }}</p>
                            <p class="text-muted mb-3">{{ groupe.descriptionGroupe|default('')|slice(0, 120) }}{% if groupe.descriptionGroupe and groupe.descriptionGroupe|length > 120 %}…{% endif %}</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary">Membres: {{ groupe.membres|length|default(0) }}</span>
                                <a href="index.php?controleur=groupe&methode=afficher&id={{ groupe.idGroupe }}" class="btn btn-outline-primary btn-sm">
                                    Voir le groupe →
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4 text-center">
                            {% if search is defined and search %}
                                <p class="text-muted mb-3">Aucun groupe ne correspond à votre recherche.</p>
                            {% else %}
                                <p class="text-muted mb-3">Aucun groupe n'a été créé pour le moment.</p>
                            {% endif %}
                            <a href="index.php?controleur=groupe&methode=afficherFormulaireCreation" class="btn btn-gradient">Créer le premier groupe</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}