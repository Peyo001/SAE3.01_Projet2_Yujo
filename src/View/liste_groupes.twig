{% extends "base_template.html.twig" %}

{% block title %}Les Groupes{% endblock %}
                                                                                                                                                
{% block content %}
    <div class="container py-4">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4">
                <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3">
                    <div>
                        <h1 class="h3 text-primary mb-1">Groupes Yujo</h1>
                        <p class="text-muted mb-0">Découvre, rejoins ou crée des communautés selon tes centres d’intérêt.</p>
                    </div>

                    <div class="d-flex flex-wrap align-items-center gap-2">
                        <a href="index.php?controleur=groupe&methode=afficherInvitations" class="btn btn-outline-primary d-flex align-items-center gap-2" title="Voir mes invitations">
                            <i class="bi bi-envelope-fill"></i>
                            <span class="fw-semibold">Invitations</span>
                        </a>
                        <a href="index.php?controleur=groupe&methode=afficherFormulaireCreation" class="btn btn-cta">
                            + Créer un groupe
                        </a>
                    </div>
                </div>

                <form class="mt-3" method="get" action="index.php" role="search">
                    <input type="hidden" name="controleur" value="groupe">
                    <input type="hidden" name="methode" value="lister">
                    <label for="search-groupes" class="form-label visually-hidden">Rechercher un groupe</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input id="search-groupes" type="text" name="search" class="form-control border-start-0" placeholder="Rechercher un groupe..." value="{{ search|default('') }}">
                        <button type="submit" class="btn btn-primary">Rechercher</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row g-3">
            {% if search is defined and search %}
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                        <p class="text-muted mb-0">Résultats pour "{{ search }}"</p>
                        <span class="badge bg-primary">{{ groupes|length }} groupe{% if groupes|length > 1 %}s{% endif %}</span>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="d-flex justify-content-end">
                        <span class="badge bg-primary">{{ groupes|length }} groupe{% if groupes|length > 1 %}s{% endif %}</span>
                    </div>
                </div>
            {% endif %}
            {% for groupe in groupes %}
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card h-100 shadow-sm hover-effect border-0">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-people-fill text-primary" style="font-size: 1.25rem;"></i>
                                    <h5 class="ms-2 mb-0">{{ groupe.nomGroupe }}</h5>
                                </div>
                                <span class="badge visibility-badge {% if groupe.estPrive %}visibility-private{% else %}visibility-public{% endif %}">
                                    {% if groupe.estPrive %}Privé{% else %}Public{% endif %}
                                </span>
                            </div>
                            <p class="text-muted small mb-2">Créé le {{ groupe.dateCreation|date("d/m/Y") }}</p>
                            <p class="text-muted mb-3 card-description">{{ groupe.descriptionGroupe|default('')|slice(0, 120) }}{% if groupe.descriptionGroupe and groupe.descriptionGroupe|length > 120 %}…{% endif %}</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge members-badge">Membres: {{ groupe.membres|length|default(0) }}</span>
                                <a href="index.php?controleur=groupe&methode=afficher&id={{ groupe.idGroupe }}" class="btn btn-outline-primary btn-sm fw-semibold">
                                    Voir le groupe →
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4 text-center">
                            {% if search is defined and search %}
                                <p class="text-muted mb-3">Aucun groupe ne correspond à votre recherche.</p>
                            {% else %}
                                <p class="text-muted mb-3">Aucun groupe n'a été créé pour le moment.</p>
                            {% endif %}
                            <a href="index.php?controleur=groupe&methode=afficherFormulaireCreation" class="btn btn-cta">Créer le premier groupe</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <style>
        .card-description {
            min-height: 48px;
        }

        .visibility-badge {
            font-weight: 700;
            border-radius: 999px;
            padding: .4rem .7rem;
        }

        .visibility-public {
            background-color: rgba(var(--bs-primary-rgb), .15);
            color: var(--yujo-primary);
        }

        .visibility-private {
            background-color: rgba(233, 30, 99, .15);
            color: var(--yujo-accent);
        }

        .members-badge {
            background-color: var(--yujo-primary);
            color: #fff;
            border-radius: 999px;
            font-weight: 600;
        }

        [data-bs-theme="dark"] .visibility-public {
            background-color: rgba(159, 177, 255, .2);
            color: #c7d2ff;
        }

        [data-bs-theme="dark"] .visibility-private {
            background-color: rgba(233, 30, 99, .28);
            color: #ffc0d6;
        }
    </style>
{% endblock %}