{% extends 'base_template.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block content %}
<style>
    .yujo-hero {
        background: linear-gradient(135deg, #eb3f73 0%, #c12458 45%, #2c3696 100%);
        color: #fff;    
        border-radius: 18px;
        box-shadow: 0 12px 30px rgba(0,0,0,0.18);
        animation: yujoFloat 6s ease-in-out infinite;
    }
    .yujo-hero h1 {
        font-weight: 800;
        letter-spacing: 0.5px;
        text-shadow: 0 4px 12px rgba(0,0,0,0.18);
    }
    .yujo-hero .slogan {
        font-size: 1.05rem;
        opacity: 0.92;
    }
    @keyframes yujoFloat {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-6px); }
    }
</style>

<div class="container mt-4">
    <div class="row mb-4 g-3 align-items-stretch">
        <div class="col-lg-8">
            <div class="p-4 p-lg-5 yujo-hero h-100 d-flex flex-column justify-content-center">
                <h1 class="display-5 mb-2">Yujo</h1>
                <p class="slogan mb-0">Crée tes rooms 3D, joue avec tes amis, partage tes meilleurs moments.</p>
            </div>
        </div>
        <div class="col-lg-4">
            <a href="index.php?controleur=parametre&methode=afficherParametre#newsletter" class="text-decoration-none">
                <div class="card shadow-sm {% if estInscritNewsletter %}border-success{% else %}border-primary{% endif %} hover-effect">
                    <div class="card-body p-3 text-center">
                        <i class="bi bi-envelope-fill {% if estInscritNewsletter %}text-success{% else %}text-primary{% endif %}" style="font-size: 2rem;"></i>
                        <h6 class="card-title {% if estInscritNewsletter %}text-success{% else %}text-primary{% endif %} mt-2 mb-2">Newsletter</h6>
                        {% if estInscritNewsletter %}
                            <span class="badge bg-success mb-2">✓ Inscrit</span>
                            <p class="text-muted small mb-2">Gérer votre inscription</p>
                            <span class="btn btn-outline-success btn-sm">Paramètres →</span>
                        {% else %}
                            <p class="text-muted small mb-2">Restez informé de nos nouveautés</p>
                            <span class="btn btn-outline-primary btn-sm">S'inscrire →</span>
                        {% endif %}
                    </div>
                </div>
            </a>
        </div>
    </div>

    <h4 class="mb-3">Connaissances</h4>

    {% if amis is defined and amis|length > 0 %}
        <div class="d-flex gap-3 overflow-auto mb-5">
            {% for ami in amis %}
                <div class="text-center">
                    {% set amiData = utilisateurs[ami.idUtilisateur2]|default(null) %}
                    {% set avatarAmi = (amiData and amiData.personnalisation) ? '/' ~ amiData.personnalisation : null %}
                    <a href="index.php?controleur=utilisateur&methode=afficherProfilPublic&id={{ ami.idUtilisateur2 }}" class="text-decoration-none text-body">
                        <div class="rounded-circle bg-secondary d-flex justify-content-center align-items-center text-white mb-1 overflow-hidden"
                             style="width:60px;height:60px;">
                            {% if avatarAmi %}
                                <img src="{{ avatarAmi }}" alt="Avatar de {{ amiData.pseudo|default('ami') }}" style="width:100%;height:100%;object-fit:cover;">
                            {% endif %}
                        </div>
                        <small>
                            {{ utilisateurs[ami.idUtilisateur2].pseudo|default('Utilisateur inconnu') }}
                        </small>
                    </a>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-muted mb-5">Aucun ami pour le moment.</p>
    {% endif %}

    <h4 class="mb-3 text-center">Fil d'actualité</h4>

    {% if publicMode %}
        <div class="alert alert-info text-center">Affichage des <strong>posts publics</strong>. <a href="index.php?controleur=accueil&methode=afficher">Revenir au fil d'amis</a></div>
    {% endif %}

    {% if posts is defined and posts|length > 0 %}
        <div class="row justify-content-center">
            <div class="col-md-8">

                {% for post in posts %}
                    <div class="card shadow-sm border-0 mb-4 hover-effect" id="post-{{ post.idPost }}">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="d-flex align-items-center gap-2">
                                    {% set auteur = utilisateurs[post.idAuteur]|default(null) %}
                                    {% set avatarAuteur = (auteur and auteur.personnalisation) ? '/' ~ auteur.personnalisation : null %}
                                    <a href="index.php?controleur=utilisateur&methode=afficherProfilPublic&id={{ post.idAuteur }}" class="d-flex align-items-center gap-2 text-decoration-none text-body">
                                        <div class="rounded-circle bg-secondary overflow-hidden" style="width:36px;height:36px;">
                                            {% if avatarAuteur %}
                                                <img src="{{ avatarAuteur }}" alt="Avatar de {{ auteur.pseudo|default('auteur') }}" style="width:100%;height:100%;object-fit:cover;">
                                            {% endif %}
                                        </div>
                                        <div>
                                            <strong>
                                                {{ utilisateurs[post.idAuteur].pseudo|default('Auteur inconnu') }}
                                            </strong>
                                            <div class="text-muted small">{{ post.datePublication|date('d/m/Y H:i') }}</div>
                                        </div>
                                    </a>
                                </div>
                                <span class="badge bg-primary">{{ post.typePost|capitalize }}</span>
                            </div>

                            {% if post.typePost == 'quiz' %}
                                <div class="p-3 border rounded-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <div class="fw-bold">Quiz</div>
                                            {% if quizParPost[post.idPost] is defined %}
                                                <p class="mb-0 text-muted">{{ quizParPost[post.idPost].titre }}</p>
                                            {% endif %}
                                        </div>
                                        <a class="btn btn-sm btn-cta" href="index.php?controleur=post&methode=afficherQuiz&id={{ post.idPost }}">Jouer</a>
                                    </div>
                                </div>
                            {% elseif post.contenu starts with 'uploads/posts/' %}
                                <img src="{{ post.contenu }}" alt="Image du post" class="img-fluid rounded" style="max-height: 380px; object-fit: cover;">
                            {% else %}
                                <div class="mt-2">
                                    <p class="mb-0" style="white-space: pre-wrap; font-size: 1rem; color: #212529;">{{ post.contenu|raw }}</p>
                                </div>
                            {% endif %}

                            <div class="mt-3">
                                {% set rep = reponsesParPost[post.idPost]|default([]) %}
                                <details>
                                    <summary class="btn btn-sm btn-outline-primary">Commentaires ({{ rep|length }})</summary>
                                    <div class="mt-2">
                                        {% if rep|length > 0 %}
                                            <ul class="list-group mb-3">
                                                {% for r in rep %}
                                                    {% set comAuteur = utilisateurs[r.idAuteur]|default(null) %}
                                                    <li class="list-group-item">
                                                        <div class="small text-muted">
                                                            Le {{ r.dateReponse }} —
                                                            {% if comAuteur %}
                                                                {{ comAuteur.pseudo }}
                                                            {% else %}
                                                                Utilisateur #{{ r.idAuteur }}
                                                            {% endif %}
                                                        </div>
                                                        <div>{{ r.contenu }}</div>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% else %}
                                            <p class="text-muted">Aucun commentaire pour l'instant.</p>
                                        {% endif %}
                                        <form action="index.php?controleur=post&methode=repondre&id={{ post.idPost }}" method="post">
                                            <div class="mb-2">
                                                <textarea name="contenu" class="form-control" rows="2" placeholder="Écrire un commentaire..."></textarea>
                                            </div>
                                            <input type="hidden" name="redirect" value="index.php?controleur=accueil&methode=afficher#post-{{ post.idPost }}">
                                            <button type="submit" class="btn btn-primary btn-sm">Publier</button>
                                        </form>
                                    </div>
                                </details>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    {% else %}
        {% if aucunPostAmi %}
            <div class="text-center my-4">
                <p class="text-muted">Aucun post d'amis pour le moment.</p>
                <a href="index.php?controleur=accueil&methode=afficher&public=1" class="btn btn-outline-primary">Voir les posts publics</a>
            </div>
        {% elseif publicMode %}
            <div class="text-center my-4">
                <p class="text-muted">Aucun post public pour le moment.</p>
                <a href="index.php?controleur=accueil&methode=afficher" class="btn btn-outline-secondary">Revenir au fil d'amis</a>
            </div>
        {% else %}
            <div class="text-center my-4">
                <p class="text-muted">Aucun post pour le moment.</p>
            </div>
        {% endif %}
    {% endif %}

</div>
{% endblock %}
