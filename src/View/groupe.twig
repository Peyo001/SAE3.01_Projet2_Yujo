{% extends "base_template.html.twig" %}

{% block title %}{{ groupe.nomGroupe }}{% endblock %}

{% block content %}
    <div class="container py-4">

        <div class="row g-4">
            <!-- Colonne principale: infos du groupe + messages -->
            <div class="col-md-8">
                <div class="card shadow-sm border-primary mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h2 class="text-primary mb-1">{{ groupe.nomGroupe }}</h2>
                                <p class="text-muted mb-3"><small>Créé le {{ groupe.dateCreation|date("d/m/Y à H:i") }}</small></p>
                            </div>
                            <span class="badge visibility-badge {% if groupe.estPrive %}visibility-private{% else %}visibility-public{% endif %}">
                                {% if groupe.estPrive %}Privé{% else %}Public{% endif %}
                            </span>
                        </div>

                        <h6 class="mb-2">Description</h6>
                        <p class="text-muted">{{ groupe.descriptionGroupe }}</p>

                        <div class="mt-3">
                            {% if user_connected in groupe.membres %}
                                <div class="d-flex gap-2">
                                    <span class="badge bg-success mb-2">✓ Vous êtes membre</span>
                                    <a href="index.php?controleur=groupe&methode=quitterGroupe&id={{ groupe.idGroupe }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir quitter ce groupe ?');">
                                        <i class="bi bi-box-arrow-right"></i> Quitter le groupe
                                    </a>
                                    <a href="index.php?controleur=groupe&methode=lister" class="btn btn-outline-secondary btn-sm">Retour à la liste des groupes</a>
                                </div>
                            {% else %}
                                <a href="index.php?controleur=groupe&methode=rejoindre&id={{ groupe.idGroupe }}" class="btn btn-primary btn-sm">Rejoindre ce groupe</a>
                                <a href="index.php?controleur=groupe&methode=lister" class="btn btn-outline-secondary btn-sm">Retour à la liste des groupes</a>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Section Messages du groupe (placeholder UI) -->
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-chat-dots-fill text-primary" style="font-size: 1.4rem;"></i>
                            <h6 class="ms-2 mb-0 text-primary">Messages du groupe</h6>
                        </div>

                        {% if messages is defined and messages|length > 0 %}
                            <ul class="list-group list-group-flush mb-3">
                                {% for msg in messages %}
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <strong>
                                                {% if utilisateurs[msg.idUtilisateur] is defined %}
                                                    {{ utilisateurs[msg.idUtilisateur].prenom }} {{ utilisateurs[msg.idUtilisateur].nom }}
                                                {% else %}
                                                    Utilisateur inconnu
                                                {% endif %}
                                            </strong>
                                            <small class="text-muted">{{ msg.dateEnvoi|date('d/m/Y H:i') }}</small>
                                        </div>
                                        <p class="mb-0 text-muted">{{ msg.contenu }}</p>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="text-muted">Aucun message pour le moment.</p>
                        {% endif %}

                        {% if user_connected in groupe.membres %}
                            <form method="post" action="index.php?controleur=groupe&methode=posterMessage&id={{ groupe.idGroupe }}">
                                <div class="input-group input-group-sm">
                                    <input type="text" name="message" class="form-control" placeholder="Écrire un message..." required>
                                    <button class="btn btn-primary" type="submit">Envoyer</button>
                                </div>
                            </form>
                        {% else %}
                            <div class="alert alert-info mb-0">Rejoignez le groupe pour envoyer des messages.</div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Colonne latérale: membres -->
            <div class="col-md-4">
                <div class="card shadow-sm border-0 mb-3">
                    <div class="card-body p-3">
                        <h6 class="card-title mb-3 section-title"><i class="bi bi-people-fill"></i> Membres ({{ groupe.membres|length }})</h6>
                        <ul class="list-group list-group-flush">
                            {% for idMembre in groupe.membres %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="rounded-circle bg-secondary" style="width:28px;height:28px;"></div>
                                        <span>
                                            {% if utilisateurs[idMembre] is defined %}
                                                {{ utilisateurs[idMembre].prenom }} {{ utilisateurs[idMembre].nom }}
                                            {% else %}
                                                Utilisateur inconnu
                                            {% endif %}
                                        </span>
                                    </div>
                                    {% if idMembre == user_connected %}
                                        <span class="badge bg-primary">Moi</span>
                                    {% endif %}
                                </li>
                            {% else %}
                                <li class="list-group-item text-muted">Aucun membre.</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

                {% if user_connected in groupe.membres %}
                <div class="card shadow-sm border-0 mb-3">
                    <div class="card-body">
                        <h5 class="mb-3">Inviter un utilisateur</h5>
                        <form method="post" action="index.php?controleur=groupe&methode=envoyerInvitation">
                            <input type="hidden" name="idGroupe" value="{{ groupe.idGroupe }}">
                            <div class="mb-3">
                                <label for="idUtilisateur" class="form-label">Sélectionner un utilisateur</label>
                                <select class="form-select" id="idUtilisateur" name="idUtilisateur" required>
                                    <option value="">-- Choisir un utilisateur --</option>
                                    {% for utilisateur in touslesAmis %}
                                        {% if utilisateur.idUtilisateur not in groupe.membres and utilisateur.idUtilisateur != user_connected %}
                                            <option value="{{ utilisateur.idUtilisateur }}">
                                                {{ utilisateur.prenom }} {{ utilisateur.nom }} ({{ utilisateur.pseudo }})
                                            </option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                            <button type="submit" class="btn btn-cta">Inviter</button>
                        </form>
                    </div>
                </div>
                {% endif %}

                {% if user_connected == idCreateur %}
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="mb-3">Modifier la confidentialité</h5>
                        <form method="post" action="index.php?controleur=groupe&methode=modifierConfidentialite&id={{ groupe.idGroupe }}">
                            <p class="mb-3">Actuellement: <strong>{{ groupe.estPrive ? 'Privé' : 'Public' }}</strong></p>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="confidentialite" id="public" value="public" {% if not groupe.estPrive %}checked{% endif %}>
                                <label class="form-check-label" for="public">
                                    <strong>Public</strong> - Visible par tous les utilisateurs
                                </label>
                            </div>
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="radio" name="confidentialite" id="prive" value="prive" {% if groupe.estPrive %}checked{% endif %}>
                                <label class="form-check-label" for="prive">
                                    <strong>Privé</strong> - Visible uniquement par les membres du groupe
                                </label>
                            </div>
                            <button type="submit" class="btn btn-cta mt-3">Enregistrer</button>
                        </form>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <style>
        .visibility-badge {
            font-weight: 700;
            border-radius: 999px;
            padding: .4rem .7rem;
        }

        .visibility-public {
            background-color: rgba(var(--bs-primary-rgb), .15);
            color: var(--yujo-primary);
        }

        .visibility-private {
            background-color: rgba(233, 30, 99, .15);
            color: var(--yujo-accent);
        }

        [data-bs-theme="dark"] .visibility-public {
            background-color: rgba(159, 177, 255, .2);
            color: #c7d2ff;
        }

        [data-bs-theme="dark"] .visibility-private {
            background-color: rgba(233, 30, 99, .28);
            color: #ffc0d6;
        }
    </style>
{% endblock %}