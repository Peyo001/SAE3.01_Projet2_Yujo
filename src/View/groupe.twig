{% extends "base_template.html.twig" %}

{% block title %}{{ groupe.nomGroupe }}{% endblock %}

{% block content %}
    <div class="container py-4">
        <div class="mb-3">
            <a href="index.php?controleur=groupe&methode=lister" class="text-decoration-none">&larr; Retour aux groupes</a>
        </div>

        <div class="row g-4">
            <!-- Colonne principale: infos du groupe + messages -->
            <div class="col-md-8">
                <div class="card shadow-sm border-primary mb-4">
                    <div class="card-body p-4">
                        <h2 class="text-primary mb-1">{{ groupe.nomGroupe }}</h2>
                        <p class="text-muted mb-3"><small>Créé le {{ groupe.dateCreation|date("d/m/Y à H:i") }}</small></p>

                        <h6 class="mb-2">Description</h6>
                        <p class="text-muted">{{ groupe.descriptionGroupe }}</p>

                        <div class="mt-3">
                            {% if user_connected in groupe.membres %}
                                <span class="badge bg-success mb-2">✓ Vous êtes membre</span>
                            {% else %}
                                <a href="index.php?controleur=groupe&methode=rejoindre&id={{ groupe.idGroupe }}" class="btn btn-primary btn-sm">Rejoindre ce groupe</a>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Section Messages du groupe (placeholder UI) -->
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-chat-dots-fill text-primary" style="font-size: 1.4rem;"></i>
                            <h6 class="ms-2 mb-0 text-primary">Messages du groupe</h6>
                        </div>

                        {% if messages is defined and messages|length > 0 %}
                            <ul class="list-group list-group-flush mb-3">
                                {% for msg in messages %}
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <strong>
                                                {% if utilisateurs[msg.idUtilisateur] is defined %}
                                                    {{ utilisateurs[msg.idUtilisateur].prenom }} {{ utilisateurs[msg.idUtilisateur].nom }}
                                                {% else %}
                                                    Utilisateur inconnu
                                                {% endif %}
                                            </strong>
                                            <small class="text-muted">{{ msg.dateEnvoi|date('d/m/Y H:i') }}</small>
                                        </div>
                                        <p class="mb-0 text-muted">{{ msg.contenu }}</p>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="text-muted">Aucun message pour le moment.</p>
                        {% endif %}

                        {% if user_connected in groupe.membres %}
                            <form method="post" action="index.php?controleur=groupe&methode=posterMessage&id={{ groupe.idGroupe }}">
                                <div class="input-group input-group-sm">
                                    <input type="text" name="message" class="form-control" placeholder="Écrire un message..." required>
                                    <button class="btn btn-primary" type="submit">Envoyer</button>
                                </div>
                            </form>
                        {% else %}
                            <div class="alert alert-info mb-0">Rejoignez le groupe pour envoyer des messages.</div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Colonne latérale: membres -->
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-3">
                        <h6 class="card-title mb-3 section-title"><i class="bi bi-people-fill"></i> Membres ({{ groupe.membres|length }})</h6>
                        <ul class="list-group list-group-flush">
                            {% for idMembre in groupe.membres %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="rounded-circle bg-secondary" style="width:28px;height:28px;"></div>
                                        <span>
                                            {% if utilisateurs[idMembre] is defined %}
                                                {{ utilisateurs[idMembre].prenom }} {{ utilisateurs[idMembre].nom }}
                                            {% else %}
                                                Utilisateur inconnu
                                            {% endif %}
                                        </span>
                                    </div>
                                    {% if idMembre == user_connected %}
                                        <span class="badge bg-primary">Moi</span>
                                    {% endif %}
                                </li>
                            {% else %}
                                <li class="list-group-item text-muted">Aucun membre.</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}